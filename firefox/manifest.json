{
  "manifest_version": 2,
  "name": "MRM Downloader",
  "version": "1.1.0",
  "description": "Download video and bulk images from myreadingmanga manga/doujin page.",
  "author": "nyt92",
  "permissions": [
    "storage",
    "downloads",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "https://myreadingmanga.info/*",
    "https://i1.myreadingmanga.info/*",
    "https://i2.myreadingmanga.info/*",
    "https://i3.myreadingmanga.info/*",
    "https://i4.myreadingmanga.info/*",
    "https://i5.myreadingmanga.info/*",
    "https://i6.myreadingmanga.info/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "MRM Downloader"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://myreadingmanga.info/*"],
      "js": [
        "./scripts/jszip.min.js",
        "./scripts/FileSaver.min.js",
        "./scripts/tailwindcss-3.4.16.js",
        "./scripts/jspdf.umd.min.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "./scripts/jszip.min.js",
    "./scripts/FileSaver.min.js",
    "./scripts/tailwindcss-3.4.16.js",
    "./scripts/jspdf.umd.min.js"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "mrm-downloader@nyt92.eu.org",
      "strict_min_version": "102.0",
      "update_url": "https://raw.githubusercontent.com/nyt92/mrm-downloader/main/updates.json"
    }
  }
}
